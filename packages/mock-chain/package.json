{
  "name": "@fleet-sdk/mock-chain",
  "version": "0.1.0-alpha.26",
  "description": "Mock chain for Ergo Smart Contracts testing.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/fleet-sdk/fleet.git",
    "directory": "packages/mock-chain"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ergo",
    "blockchain",
    "transactions",
    "serialization",
    "tests"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:unit": "vitest"
  },
  "dependencies": {
    "@fleet-sdk/common": "workspace:^",
    "@fleet-sdk/core": "workspace:^",
    "@fleet-sdk/wallet": "workspace:^",
    "@noble/hashes": "^1.3.1",
    "ergo-lib-wasm-nodejs": "^0.24.0"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "src",
    "dist",
    "!**/*.spec.*",
    "!**/*.json",
    "!tests",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
