    "watch:build": "tsc -p tsconfig.json -w",
    "watch:unit": "vitest"
  },
  "dependencies": {
    "@fleet-sdk/common": "workspace:^",
    "@fleet-sdk/core": "workspace:^",
    "@scure/bip32": "^1.3.0",
    "@scure/bip39": "^1.2.0"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "src",
    "dist",
    "!**/*.spec.*",
    "!**/*.json",
    "!tests",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
