{
  "version": "0.1.0-alpha.29",
  "private": "true",
  "packageManager": "pnpm@8.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/fleet-sdk/core.git"
  },
  "license": "MIT",
  "scripts": {
    "clear": "pnpm -r exec rm -rf dist",
    "fix": "run-s fix:*",
    "test": "run-s test:*",
    "watch": "vitest",
    "ver:stable": "standard-version",
    "ver:alpha": "standard-version --prerelease alpha",
    "fix:prettier": "prettier ./**/*.ts --write",
    "fix:lint": "eslint ./ --ext .ts --fix",
    "test:lint": "eslint ./ --ext .ts",
    "test:prettier": "prettier ./**/*.ts --list-different",
    "test:unit": "vitest run",
    "cov:check": "vitest run --coverage",
    "cov:open": "vitest run --coverage ; open-cli coverage/index.html",
    "bench": "vitest bench"
  },
  "devDependencies": {
    "@noble/hashes": "^1.3.0",
    "@scure/base": "^1.1.1",
    "@scure/bip32": "^1.3.0",
    "@scure/bip39": "^1.2.0",
    "@types/node": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-istanbul": "^0.31.1",
    "ergo-lib-wasm-nodejs": "^0.24.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.2.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.7",
    "vitest": "^0.31.1"
  },
  "engines": {
    "node": ">=10",
    "pnpm": ">=8.1.1 <9"
  }
}
