{
  "private": "true",
  "packageManager": "pnpm@8.1.1",
  "repository": "fleet-sdk/fleet",
  "license": "MIT",
  "scripts": {
    "clear": "pnpm -r exec rm -rf dist",
    "fix": "run-s fix:*",
    "test": "run-s test:*",
    "watch": "vitest",
    "ci:publish": "pnpm clear && pnpm -r build && changeset publish --provenance",
    "fix:prettier": "prettier ./**/*.ts --write",
    "fix:lint": "eslint ./ --ext .ts --fix",
    "test:lint": "eslint ./ --ext .ts",
    "test:prettier": "prettier ./**/*.ts --list-different",
    "test:unit": "vitest run",
    "cov:check": "vitest run --coverage",
    "cov:open": "vitest run --coverage ; open-cli coverage/index.html",
    "bench": "vitest bench"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@noble/hashes": "^1.3.1",
    "@scure/base": "^1.1.1",
    "@scure/bip32": "^1.3.0",
    "@scure/bip39": "^1.2.0",
    "@types/diff": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.32.2",
    "diff": "^5.1.0",
    "ergo-lib-wasm-nodejs": "^0.24.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.2.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=8"
  }
}
